{
  "env": {
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "import/extensions": [
      "error",
      "ignorePackages"
    ],
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "no-underscore-dangle": [
      "error",
      {
        "allowAfterThis": true,
        "allow": [
          "_refill"
        ]
      }
    ],
    "no-plusplus": [
      "error",
      {
        "allowForLoopAfterthoughts": true
      }
    ],
    "no-await-in-loop": "off",
    "import/prefer-default-export": "off",
    "func-names": "off",
    "prefer-arrow-callback": "off",
    "consistent-return": "off"
  }
}